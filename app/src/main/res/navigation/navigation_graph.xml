<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_dashboard">

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.hypergraph.entrepreneur.ui.home.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard">
        <!-- Default animation comes from this  -->
        <action
            android:id="@+id/action_navigation_dashboard_to_childFragment"
            app:destination="@id/childFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@+id/navigation_dashboard" />
    </fragment>

    <fragment
        android:id="@+id/navigation_gallery"
        android:name="com.hypergraph.entrepreneur.ui.markerplace.GalleryFragment"
        android:label="@string/title_create"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.hypergraph.entrepreneur.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/childFragment"
        android:name="com.hypergraph.entrepreneur.ui.home.ChildFragment"
        android:label="fragment_child"
        tools:layout="@layout/fragment_child" />
</navigation>